{
  "manifest_version": 3,
  "name": "Ahamkara Wishes",
  "version": "7.0",
  "permissions": ["storage", "clipboardRead", "sidePanel"],
  "host_permissions": ["https://www.bungie.net/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.destinyitemmanager.com/*", 
        "https://beta.destinyitemmanager.com/*",
        "https://d2foundry.gg/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Make Ahamkara Wishes"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}{
  "manifest_version": 3,
  "name": "Destiny 2 Armor Wisher",
  "version": "1.0",
  "description": "Search and track complete armor sets with intelligent caching.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.bungie.net/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}