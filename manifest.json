{
  "manifest_version": 3,
  "name": "Ahamkara Wishes",
  "version": "0.2.9",
  "description": "Wishlist manager for D2Foundry and Armor Sets.",
  "permissions": ["storage", "sidePanel", "identity", "clipboardWrite"],
  "host_permissions": ["https://www.bungie.net/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.destinyitemmanager.com/*", 
        "https://beta.destinyitemmanager.com/*",
        "https://d2foundry.gg/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open Ahamkara Wishes"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["oauth-callback.html", "oauth-callback.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}